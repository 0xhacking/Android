<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

       <EditText
           android:id="@+id/register_username"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:text="@string/Register_UserName" >

           <requestFocus />
       </EditText>

       <EditText
           android:id="@+id/register_password"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:inputType="textPassword"
           android:text="@string/Register_Password" />
       
       <EditText
           android:id="@+id/register_mobile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:text="@string/Register_Mobile" />

       <EditText
           android:id="@+id/register_email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:inputType="textEmailAddress"
           android:text="Email" />

       <EditText
           android:id="@+id/register_bank_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:inputType="number"
           android:text="银行卡号" />

       <EditText
           android:id="@+id/register_bank_code"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:inputType="number"
           android:text="银行编码" />

       <EditText
           android:id="@+id/register_task_type"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:inputType="textPersonName"
           android:text="类型" />

       <Button
           android:id="@+id/register_submit_get"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:text="注册" />

</LinearLayout>

